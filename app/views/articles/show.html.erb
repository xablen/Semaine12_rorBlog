<h1>Article « <%= @article.title %> »</h1>

<p><%= @article.content %></p>

<%= form_tag "/articles/#{@article.id}", method: "post" do %>
  <input type="text" name="author" placeholder="Auteur">
  <input type="text" name="content" placeholder="Commentaire"></br>
  </br>
  <input type="submit" value="Ajouter un commentaire">
  </br><% end %>

  </br>

  <h2>Liste des commentaires</h2>

   <% @comments.each do |comment| %>
 <p>
      <% if comment.content && (comment.article_id == @article.id) %>
        <b><%= comment.author %> :</b> <%= comment.content %>
    <% end %>
 </p>
 <% end %>

<%= paginate @comments %>
</br>

<p><a href="/">Retour à la liste des articles</a></p>
